{
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "strict": true,
    "noUnusedLocals": true,
    "compilerOptions": {
        "moduleResolution": "Node",
        "target": "ES6",
        "lib": [
            "ES2017",
            "DOM"
        ],
        "strictNullChecks": true,
        "module": "CommonJS",
        "noImplicitAny": true,
        "removeComments": false,
        "preserveConstEnums": true,
        "sourceMap": true,
        "mapRoot": "",
        "outDir": "build/"
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.js"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}